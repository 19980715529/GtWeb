@layout("/common/_container.html"){
	<!-- PAGE CONTENT BEGINS -->
<div class="row">
	<div class="col-xs-12 tb-grid">
	<form data-url="${ctxPath}/${code}/save" method="post" class="form-horizontal" role="form">
		<table class="table table-bordered">
			<tbody>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">区服ID: </td>
					<td><input name="areacount.serverID"/></td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">端口: </td>
					<td><input name="areacount.port"/></td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">当前在线人数: </td>
					<td><input name="areacount.userCount" /></td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">刷新时间: </td>
					<td><input name="areacount.overDueTime" id="deploy_time"/></td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">是否允许进人: </td>
					<td>
						<input type="radio" name="areacount.isOpen" value="1" checked="checked"/>允许
						<input type="radio" name="areacount.isOpen" value="0"/>不允许
					</td>
				</tr>
			</tbody>
		</table>
		</form>
	</div>
</div>
<script src="${ctxPath}/static/laydate/laydate.js"></script>
<script>
laydate({
	elem : '#deploy_time',
	format : 'YYYY-MM-DD', // 分隔符可以任意定义，该例子表示只显示年月日
	//festival: true, //显示节日
	choose : function(datas) { //选择日期完毕的回调
		/*   alert('得到：'+datas); */
	}
});
</script>
		<!-- 按钮 -->
		@ include("/common/_curd/_btn.html",{btn_save:"确认新增",btn_close:"关闭"}) {}
@}