@layout("/common/_container.html"){
	<!-- PAGE CONTENT BEGINS -->
<div class="row">
	<div class="col-xs-12 tb-grid">
	<form data-url="${ctxPath}/${code}/update" method="post" class="form-horizontal" role="form">
		<table class="table table-bordered">
			<tbody>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">宝箱类型ID: </td>
					<td>${switchInfo.ID!}
					<input type="hidden" name="switchInfo.ID" value="${switchInfo.ID!}"/>
					</td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">宝箱类型名称: </td>
					<td><input name="switchInfo.PlatformActiveName" value="${switchInfo.PlatformActiveName!}" /></td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">宝箱类型价格: </td>
					<td>
						@if(switchInfo.Nullity == 0){
						  	<input type="radio" name="switchInfo.Nullity" value="0" checked="checked"/>启用
							<input type="radio" name="switchInfo.Nullity" value="1"/>禁用
						@} else {
						  	<input type="radio" name="switchInfo.Nullity" value="0"/>启用
							<input type="radio" name="switchInfo.Nullity" value="1" checked="checked"/>禁用
						@}
						
					</td>
				</tr>
			</tbody>
		</table>
		</form>
	</div>
</div>
		<!-- 按钮 -->
		@ include("/common/_curd/_btn.html",{btn_save:"确认修改",btn_close:"关闭"}) {}
@}