@layout("/common/_container.html"){
<!-- PAGE CONTENT BEGINS -->
<div class="row">
    <div class="col-xs-12 tb-grid">
        <form data-url="${ctxPath}/${code}/updateUserMeliProp" method="post" class="form-horizontal" role="form">
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">玩家ID: </td>
                    <td>${player.UserID}
                        <input name="player.UserID" value="${player.UserID}" type="hidden"/>
                    </td>
                </tr>
                <tr>
                    <td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">玩家当前魅力卡数量: </td>
                    <td>${meili.meilipropcount}
                        <input name="meili.num" value="${meili.meilipropcount}" type="hidden"/>
                    </td>
                </tr>
                <tr>
                    <td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">修改魅力卡数量: </td>
                    <td><input name="meilipropnum" value="${meili.meilipropcount}" /></td>
                </tr>
                <tr>
                    <td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">今天已经使用数量: </td>
                    <td>${meili.tadyusecount}
                        <input name="meili.tadynum" value="${meili.tadyusecount}" type="hidden"/>
                    </td>
                </tr>
                <tr>
                    <td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">修改今天已经使用数量: </td>
                    <td><input name="tadymelicount" value="${meili.tadyusecount}" /></td>
                </tr>
                <tr>
                    <td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">最后使用卡时间: </td>
                    <td>${meili.changetime}
                        <input name="meili.changetime" value="${meili.changetime}" type="hidden"/>
                    </td>
                </tr>
                <tr>
                    <td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">修改使用时间: </td>
                    <td><input name="changetime" value="${meili.changetime}" /></td>
                </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>
<script>
    var isAutoFlushTab = true;
</script>
<!-- 按钮 -->
@ include("/common/_curd/_btn.html",{btn_save:"确认修改",btn_close:"关闭"}) {}
@}