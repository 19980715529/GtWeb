@layout("/common/_container.html"){
<!-- PAGE CONTENT BEGINS -->
<div class="row">
    <div class="col-xs-12 tb-grid">
        <form data-url="${ctxPath}/coderebate/update" method="post" class="form-horizontal" role="form">
            <input type="hidden" name="coderebate.id" value="${coderebate.id!}"/>
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">打码量要求: </td>
                    <td><input type="text" name="coderebate.param1" value="${coderebate.Param1!}" /></td>
                </tr>
                <tr>
                    <td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">奖励类型: </td>
                    <td>
                        <input type="radio" name="coderebate.rewardType" value="2" ${coderebate.RewardType==2?"checked":""}>转盘次数</input>&nbsp;&nbsp;
                        <input type="radio" name="coderebate.rewardType" value="1" ${coderebate.RewardType==1?"checked":""}>金币</input>
                    </td>
                </tr>
                <tr>
                    <td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">奖励数量: </td>
                    <td><input type="text" name="coderebate.reward" value="${coderebate.Reward!}" /></td>
                </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>
<!-- 按钮 -->
@ include("/common/_curd/_btn.html",{btn_save:"确认修改",btn_close:"关闭"}) {}
@}