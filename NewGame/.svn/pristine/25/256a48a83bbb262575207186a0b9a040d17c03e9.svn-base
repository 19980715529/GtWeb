@layout("/common/_container.html"){
	<!-- PAGE CONTENT BEGINS -->
<div class="row">
	<div class="col-xs-12 tb-grid">
	<form data-url="${ctxPath}/box/update" method="post" class="form-horizontal" role="form">
		<input type="hidden" name="box.boxtype" value="${box.boxtype!}"/>
		<table class="table table-bordered">
			<tbody>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">宝箱类型名称: </td>
					<td>${box.typeName!}</td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">金币: </td>
					<td><input type="text" name="box.usemoney" value="${box.usemoney!0}"/></td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">最小奖券值: </td>
					<td><input type="text" name="box.itemnum1" value="${box.itemnum1!0}" /></td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">最大奖券值: </td>
					<td><input type="text" name="box.itemnum2" value="${box.itemnum2!0}" /></td>
				</tr>
			</tbody>
		</table>
		</form>
	</div>
</div>
<script>
var isAutoFlushTab=true;
</script>
		<!-- 按钮 -->
		@ include("/common/_curd/_btn.html",{btn_save:"确认修改",btn_close:"关闭"}) {}
@}