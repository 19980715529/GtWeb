@layout("/common/_container.html"){
	<!-- PAGE CONTENT BEGINS -->
<div class="row">
	<div class="col-xs-12 tb-grid">
	<form data-url="${ctxPath}/${code}/${url}" method="post" class="form-horizontal" role="form">
		<table class="table table-bordered">
			<tbody>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">玩家ID: </td>
					<td>${id!}
						<input name="player.UserID" value="${id!}" type="hidden"/>
						<input name="player.relationType" value="${type!}" type="hidden"/>
					</td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">操作类型: </td>
					<td>
						<select name="player.type">
							@if(type=='LastLogonIP' && locktype=='lock'){
								<option value="IP地址联合锁定">IP地址联合锁定</option>
							@}else if(type=='LastLogonIP' && locktype=='trade'){
								<option value="IP地址联合禁止交易">IP地址联合禁止交易</option>
							@}else if(type=='SendNum' && locktype=='lock'){
								<option value="赠送联合锁定">赠送联合锁定</option>
							@}else if(type=='SendNum' && locktype=='trade'){
								<option value="赠送联合禁止交易">赠送联合禁止交易</option>
							@}else if(type=='single' && locktype=='lock'){
								<option value="锁定用户">锁定用户</option>
							@}else if(type=='single' && locktype=='trade'){
								<option value="禁止交易">禁止交易</option>
							@}
						</select>
					</td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">操作理由: </td>
					<td>
						<textarea rows="5" cols="50" name="player.remark" placeholder="操作理由不得少于两个汉字"></textarea>
					</td>
				</tr>
			</tbody>
		</table>
		</form>
	</div>
</div>
<script>
	var isAutoFlushTab = true;
</script>
<script src="${ctxPath}/static/search/numhandler.js" type="text/javascript" ></script>
		<!-- 按钮 -->
		@ include("/common/_curd/_btn.html",{btn_save:"确定",btn_close:"关闭"}) {}
@}