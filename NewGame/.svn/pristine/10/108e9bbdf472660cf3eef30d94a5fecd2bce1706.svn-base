@layout("/common/_container.html"){
<style>
html{
overflow: hidden;
}
</style>
<script type="text/javascript">
	var ctx="${ctxPath}";
	var grid_selector = "#grid-table";
	var pager_selector = "";
	
	$(function(){
		initGrid();
	});
	
	function initGrid(){
		var grid_url = ctx+"/${code}/stocklist";//查询列表接口
		var _colnames=[ "会员卡","库存","已充值","未充值","已过期","禁用","总金额","总游戏豆","总游戏币"];
		var _colmodel=[   {name:"CardName", sortable:false},
		                  {name:"CountNum", sortable:false},
		                  {name:"UsedCount", sortable:false},
		                  {name:"UnUsedCount", sortable:false},
		                  {name:"ValidedCount", sortable:false},
		                  {name:"NullityCount", sortable:false},
		                  {name:"CardPrice", sortable:false},
						  {name:"Currency", sortable:false},
						  {name:"Gold", sortable:false}
						];
		
		jQuery(grid_selector).jqGrid({
			url:grid_url,
			shrinkToFit : true,//适用于较少字段,响应式
			colNames:_colnames,
			colModel:_colmodel, 
			postData: {sort:'CountNum',order:'desc'},
			rowNum:-1,
			height: 'auto',
			multiselect : false,
			rownumbers : false
		});
	}
</script>
	<!-- 配置grid -->
	<div class="row">
		<div class="col-xs-12 tb-grid">
			<!-- grid -->
			<table id="grid-table"></table>
		</div>
	</div>
	@include("/common/_listscript.html"){}
@}	