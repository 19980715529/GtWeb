@layout("/common/_container.html"){
	<!-- PAGE CONTENT BEGINS -->
<div class="row">
	<div class="col-xs-12 tb-grid">
	<form data-url="${ctxPath}/${code}/updateremainblood" method="post" class="form-horizontal" role="form">
		<table class="table table-bordered">
			<tbody>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">房间信息: </td>
					<td>${room.roomname!}
						<!-- <select id="ServerID" onchange="changeRoomInfo(this)"></select> -->
						<input type="hidden" name="blood.kindid" value="${room.kindid!}"/>
						<input type="hidden" name="blood.serverid" value="${room.serverid!}"/>
					</td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">当前剩余血池: </td>
					<td><span id="BloodPondbalanceVal">${room.bloodscore!0}</span></td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">修改增减额度: </td>
					<td><input name="blood.bloodscore" value="0" id="score" autoComplete='off'/><span class="text-red">正数增加,负数减少</span></td>
				</tr>
				<tr>
					<td></td>
					<td id="showC"></td>
				</tr>
			</tbody>
		</table>
		</form>
	</div>
</div>
<script src="${ctxPath}/static/search/numhandler.js" type="text/javascript" ></script>
	    
		<!-- 按钮 -->
		@ include("/common/_curd/_btn.html",{btn_save:"确认修改",btn_close:"关闭"}) {}
@}