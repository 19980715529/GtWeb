@layout("/common/_container.html"){
	<!-- PAGE CONTENT BEGINS -->
<div class="row">
	<div class="col-xs-12 tb-grid">
	<form data-url="${ctxPath}/${code}/update" method="post" class="form-horizontal" role="form">
		<table class="table table-bordered">
			<tbody>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">实物名称: </td>
					<td>
						<input type="text" name="livcardconfig.GoodsName" value="${livcardconfig.GoodsName!}"/>
						<input type="hidden" name="livcardconfig.Goods_Id" value="${livcardconfig.Goods_Id!}"/>
					</td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">实物类型: </td>
					<td>
						<select name="livcardconfig.GoodsType">
						@if(livcardconfig.GoodsType==1){
							<option value="1" selected="selected">普通实物</option>
							<option value="2">话费卡</option>
						@}else{
							<option value="1">普通实物</option>
							<option value="2" selected="selected">话费卡</option>
						@}
						</select>
					</td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">奖券: </td>
					<td><input type="text" name="livcardconfig.Ticket" value="${livcardconfig.Ticket!0}" /></td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">关联数量: </td>
					<td><input type="text" name="livcardconfig.RelationAmount" value="${livcardconfig.RelationAmount!0}" /></td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">排序: </td>
					<td><input type="text" name="livcardconfig.ShowSort" value="${livcardconfig.ShowSort!1}" /></td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">备注: </td>
					<td><input type="text" name="livcardconfig.Remark" value="${livcardconfig.Remark!}" /></td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">是否在线: </td>
					<td>
						@if(livcardconfig.IsOnLine==1){
							<input type="radio" name="livcardconfig.IsOnLine" value="1" checked="checked"/>在线
							<input type="radio" name="livcardconfig.IsOnLine" value="0"/>下线
						@} else{
							<input type="radio" name="livcardconfig.IsOnLine" value="1"/>在线
							<input type="radio" name="livcardconfig.IsOnLine" value="0" checked="checked"/>下线
						@}
					</td>
				</tr>
			</tbody>
		</table>
		</form>
	</div>
</div>
		<!-- 按钮 -->
		@ include("/common/_curd/_btn.html",{btn_save:"确认修改",btn_close:"关闭"}) {}
@}