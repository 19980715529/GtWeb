@layout("/common/_container.html"){
	<!-- PAGE CONTENT BEGINS -->
<div class="row">
	<div class="col-xs-12 tb-grid">
	<form data-url="${ctxPath}/${code}/save" method="post" class="form-horizontal" role="form">
		<table class="table table-bordered">
			<tbody>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">当前房间: </td>
					<td>
						<select name="lBloodserverconnect.curserverid" id="curserverid">
						</select>
					</td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">合并房间: </td>
					<td>
						<select name="lBloodserverconnect.mainserverid" id="mainserverid">
						</select>
					</td>
				</tr>
			</tbody>
		</table>
		</form>
	</div>
</div>
<script>
	$(function(){
		new Ajax("${ctxPath}/room/getRoomInfo", function (data) {
		    if(data.code == 0 && BladeTool.isNotEmpty(data.data)) {
		    	var type = data.data;
		    	var html = '';
		    	for (var i = 0; i < type.length; i++) {
		    		html += '<option value="' + type[i]['ServerID'] + '"';
					html += '>' + type[i]['ServerName'] + '</option>';
				}
		    	$("#curserverid").html(html);
		    	$("#mainserverid").html(html);
		    }
		}).start();
	});
</script>
		<!-- 按钮 -->
		@ include("/common/_curd/_btn.html",{btn_save:"确认新增",btn_close:"关闭"}) {}
@}