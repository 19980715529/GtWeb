@layout("/common/_container.html"){
	<!-- PAGE CONTENT BEGINS -->
<div class="row">
	<div class="col-xs-12 tb-grid">
	<form data-url="${ctxPath}/${code}/update" method="post" class="form-horizontal" role="form">
		<table class="table table-bordered">
			<tbody>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">平台类型: </td>
					<td>
						<select name="newplayerprop.platid">
							@if(newplayerprop.platid==0){
								<option value="0" selected="selected">苹果</option>
								<option value="1">安卓</option>
								<option value="2">PC</option>
							@}else if(newplayerprop.platid==1){
								<option value="0">苹果</option>
								<option value="1" selected="selected">安卓</option>
								<option value="2">PC</option>
							@}else{
								<option value="0">苹果</option>
								<option value="1">安卓</option>
								<option value="2" selected="selected">PC</option>
							@}
						</select>
					</td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">类型: </td>
					<td>
						<select name="newplayerprop.Prop_Id">
							@if(newplayerprop.Prop_Id==1){
								<option value="1" selected="selected">金币</option>
								<option value="2">奖券</option>
							@}else{
								<option value="1">金币</option>
								<option value="2" selected="selected">奖券</option>
							@}
						</select>
					</td>
				</tr>
				<tr>
					<td style="vertical-align: middle !important;text-align:right;" class="bg-F5F5F5">数量: </td>
					<td><input name="newplayerprop.amount" value="${newplayerprop.amount}"/></td>
				</tr>
			</tbody>
		</table>
		</form>
	</div>
</div>
		<!-- 按钮 -->
		@ include("/common/_curd/_btn.html",{btn_save:"确认修改",btn_close:"关闭"}) {}
@}